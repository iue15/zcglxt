@{
    ViewBag.Title = "zclb";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div id="ShowGrid"></div>
</div>

<script type="text/javascript">

    var Columns = [
        { field: 'ck', checkbox: true },   //选择
        { title: '类型编码', field: 'Code', width: 80, sortable: true },
        { title: '类型名称', field: 'Name', width: 100, sortable: true },
        { title: '备注', field: 'Note', width: 120, sortable: true }
    ];

    //实现对DataGird控件的绑定操作
    function DataLoad() {
        //var Params = {};
        $('#ShowGrid').datagrid({
            title: '资产类别',
            iconCls: 'icon-view',
            height: function () { return document.body.clientHeight * 1 },//自动高度
            nowrap: true,
            autoRowHeight: false,
            striped: true,
            collapsible: true,
            url: '/Shared/GetCategory',
            columns: [Columns],
            rownumbers: true,
            //pagination: true,
            //pageNumber: 1,
            //pageSize: 20,
            //queryParams: Params,
            toolbar: [{
                id: 'btnAdd',
                text: '新增',
                iconCls: 'icon-add',
                handler: function () {
                    Add();
                }
            }, '-', {
                id: 'btnEdit',
                text: '编辑',
                iconCls: 'icon-edit',
                handler: function () {
                    Edit();
                }
            }, '-', {
                id: 'btnDelete',
                text: '删除',
                iconCls: 'icon-cancel',
                handler: function () {
                    Delete();
                }
            }, '-', {
                text: '刷新',
                iconCls: 'icon-reload',
                handler: function () {
                    Search();
                }
            }]
        });
    }
    //查询
    function Search() {
        //var Params = {};
        //Params.KeyWord = $("#KeyWord").val();
        //$("#ShowGrid").datagrid("reload", Params);
        $('#ShowGrid').datagrid('reload');
    }

    function Add() {
        top.zDialog.OpenPage({
            width: 300,
            height: 200,
            url: "/Base/zclb_add?Edit=0",
            title: "新增",
            Callback: function (data) {
                Search();
            }
        });
    }

    function Edit() {
        var objs = $('#ShowGrid').datagrid('getChecked');
        if (objs.length > 0) {
            if (objs.length == 1) {
                top.zDialog.OpenPage({
                    width: 300,
                    height: 200,
                    url: '/Base/zclb_add?Edit=1&Code=' + objs[0].Code,
                    title: "编辑",
                    Callback: function (data) {
                        Search();
                    }
                });
            } else {
                top.Dialog.alert("请选择一条资产类型编辑！")
            }
        } else {
            top.Dialog.alert("请选择要编辑的资产类型！")
        }
    }

    function Delete() {
        var objs = $('#ShowGrid').datagrid('getChecked');
        if (objs.length > 0) {
            var strCode = "", count = 0;
            $.each(objs, function (i, obj) {
                strCode = strCode + obj.Code + ",";
                count++;
            });
            if (count > 0) {
                strCode = strCode.substring(0, strCode.length - 1);
                top.Dialog.confirm("确定删除？", function () {
                    $.post("CategoryDelete", { StrCode: strCode }, function (data) {
                        if (data > 0) {
                            Search();
                            top.Dialog.alert("删除成功！");
                        } else if (data < 0) {
                            top.Dialog.alert("删除失败！");
                        } else {
                            top.Dialog.alert("已在使用，不能删除！");
                        }
                    });
                });
            }
        } else {
            top.Dialog.alert("请选择要删除的资产类型！");
        }
    }

    $(document).ready(function () {
        DataLoad();
    });

</script>

